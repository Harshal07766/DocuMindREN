# DocuMind AI - Track B Compliant System Environment Configuration
# Copy this file to .env and fill in your actual API keys
# IMPORTANT: Never commit the .env file to version control!

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=false

# =============================================================================
# CORE API KEYS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GENERATION_OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# VECTOR DATABASE CONFIGURATION (Choose ONE)
# =============================================================================
VECTOR_DB_PROVIDER=pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
WEAVIATE_URL=your_weaviate_url_here
QDRANT_URL=your_qdrant_url_here
QDRANT_API_KEY=your_qdrant_api_key_here
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here
SUPA_PASSWORD=your_supabase_password_here

# =============================================================================
# RERANKER CONFIGURATION (Choose ONE)
# =============================================================================
RERANKER_PROVIDER=cohere
COHERE_API_KEY=your_cohere_api_key_here
JINA_API_KEY=your_jina_api_key_here
VOYAGE_API_KEY=your_voyage_api_key_here
BGE_API_KEY=your_bge_api_key_here

# =============================================================================
# CACHE AND STORAGE
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DSN=postgresql://postgres:your_password@your_host:5432/your_database

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
PORT=8005
HOST=0.0.0.0
DEBUG=False
LOG_LEVEL=INFO

# System Mode (standard, professional, or enterprise)
# - standard: Run only the DocuMind AI Standard system
# - professional: Run only the DocuMind AI Professional system  
# - enterprise: Run both systems (default)
SYSTEM_MODE=enterprise

# =============================================================================
# CHUNKING PARAMETERS
# =============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=150

# =============================================================================
# SEARCH PARAMETERS
# =============================================================================
DENSE_TOP_K=40
LEX_TOP_K=20
RERANK_TOP_K=10

# =============================================================================
# RATE LIMITING
# =============================================================================
MAX_CONCURRENT_EMBEDDINGS=5
MAX_CONCURRENT_LLM=3
MAX_RETRIES=3
EMBEDDING_RETRY_DELAY=1.0
LLM_RETRY_DELAY=2.0

# =============================================================================
# TEST CONFIGURATION
# =============================================================================
TEST_MODE=False
MOCK_API_CALLS=False

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Replace all 'your_*_here' values with your actual API keys
# 2. Never commit this file or .env to version control
# 3. Keep your API keys secure and rotate them regularly
# 4. Use different keys for development and production
# 5. Consider using a secrets management service for production
